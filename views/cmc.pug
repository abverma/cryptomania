doctype html
html(lang='en')
	include head.pug
	body
		include heading.pug
		div(class="row")
			h3(class="mx-4 p-2 col col-md-3") Coinmarketcap Rates
		div(class="row mx-2 p-2")
			a(href="/cmcRates?limit=10" class="active" style="width: 70px") Top 10
			a(href="/cmcRates?limit=50" style="width: 70px") Top 50
			a(href="/cmcRates?limit=100" style="width: 70px") Top 100

		div(class="row")
			div(class="m-4 p-4 border rounded bg-light col col-md-3")
				ul 
					each val, index in data
						li= val.name + ': $' + val.quotes.USD.price
		include footer.pug
		include script.pug