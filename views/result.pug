doctype html
html(lang='en' style="height:100%; box-sizing: border-box;")
	include head.pug
	body (style="position: relative; padding-bottom: 6rem;")
		include heading.pug
		div(class="row")
			div(class="m-4 p-4 border rounded bg-light col col-md-3")
				p(class="text-center") Total Value: Rs.#{result.total_value} <br>
				p(class="text-center") BTC@ #{result.btc_rate}  LTC@ #{result.ltc_rate} XRP@ #{result.xrp_rate}
		include footer.pug
		include script.pug